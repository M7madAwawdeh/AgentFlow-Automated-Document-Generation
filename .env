# AgentFlow Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME="AgentFlow"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=agentflow
DB_USERNAME=agentflow
DB_PASSWORD=password
DB_ROOT_PASSWORD=root

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# AI Services
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Python AI Agents Service
PYTHON_AGENTS_URL=http://python-agents:5000
PYTHON_AGENTS_TIMEOUT=300

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# Session and Cache
SESSION_DRIVER=redis
CACHE_DRIVER=redis

# File Uploads
FILESYSTEM_DISK=local
MAX_FILE_SIZE=10485760
SUPPORTED_FILE_TYPES=php,js,vue,blade.php,json,yaml,yml

# Security
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Mail (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@agentflow.com"
MAIL_FROM_NAME="${APP_NAME}"

# Broadcasting
BROADCAST_DRIVER=log

# Horizon
HORIZON_DOMAIN=
HORIZON_PATH=horizon

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost:8000

# Filament
FILAMENT_PATH=admin

# Development Tools
DEBUGBAR_ENABLED=true
IDE_HELPER_GENERATE=true

# Backup
BACKUP_DESTINATION=local
BACKUP_NAME=agentflow-backup

# Activity Log
ACTIVITY_LOGGER_ENABLED=true
ACTIVITY_LOGGER_DEFAULT_LOG_NAME=default

# Permissions
PERMISSION_CACHE_EXPIRATION=86400
PERMISSION_CACHE_KEY=spatie.permission.cache

# Git Integration
GIT_CLONE_TIMEOUT=300
GIT_MAX_REPOSITORY_SIZE=104857600

# Analysis Configuration
DEFAULT_AGENTS={"documenter":true,"tester":true,"security_auditor":true,"performance_optimizer":true}
DEFAULT_MODEL=llama-3-70b
DEFAULT_TONE=professional
ANALYSIS_TIMEOUT=1800
MAX_CONCURRENT_ANALYSES=5

# Export Configuration
EXPORT_STORAGE_DISK=local
EXPORT_MAX_FILE_SIZE=52428800
EXPORT_RETENTION_DAYS=30

# Monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30
METRICS_ENABLED=true
METRICS_PORT=9090

# Development Overrides
FORCE_HTTPS=false
TRUSTED_PROXIES=
CORS_ALLOWED_ORIGINS=*
